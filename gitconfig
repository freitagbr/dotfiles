[user]
	name = Brandon Freitag
	email = freitagbr@gmail.com
[core]
	editor = vim
	excludesfile = ~/.gitignore
[alias]
	co = commit -am
	com = commit -m
	st = status -bs
	pl = pull
	ps = push
	ch = checkout
	cb = checkout -b
	br = branch
	db = branch -D
	fe = fetch
	cl = clone
	lg = log --oneline -20 --reverse
	last = log --oneline -1
	sh = stash
	cp = read-tree -u -m
	sa = stash apply
	pr = pull --prune
	rh = reset --hard
	un = reset head
	undo = reset HEAD~1 --mixed
	cy = cherry-pick
	mas = checkout master
	dif = diff master
	bn = !git rev-parse --abbrev-ref HEAD
	pub = !git push -u origin $(git bn)
	dmb = !git checkout master && git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d
[push]
	default = simple
