alias ..='cd ..'
alias la='ls -la'
alias lf='ls -lFa'
alias ll='ls -lhACF'
alias c='clear'
alias cl='clear'
alias grep='grep --color=auto'
alias mk='mkdir -p'
alias rmdir='rm -rf'
alias mip='dig +short myip.opendns.com @resolver1.opendns.com'
alias fpi='nmap -sP 192.168.1.0/24 | awk '"'"'/^Nmap/{ip=$NF}/rpi/{print ip}'"'"' | sed "s/[\(\)]//g"'
alias sshpi='ssh root@$(fpi)'
alias electron='./node_modules/.bin/electron .'
